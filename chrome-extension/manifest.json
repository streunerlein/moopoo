{
  "name": "moopoo",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "less bullshit, more moopoo",
  "homepage_url": "https://github.com/streunerlein/moopoo",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Moo. Moo."
  },
  "icons": { "16": "icon16.png",
      "48": "icon48.png",
    "128": "icon128.png" },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}
